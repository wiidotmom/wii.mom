{
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A - --config _lume.ts",
		"build": "deno task lume",
		"serve": "deno task lume -s",
		"cache": "deno cache --lock-write --reload _lume.ts"
	},
	"compilerOptions": {
		"types": ["lume/types.ts"]
	},
	"imports": {
		"lume/": "https://raw.githubusercontent.com/malloryhayr/lume/main/"
	}
}
